<odoo>
    <data>
        <!-- Cron para actualizar batallas -->
        <record model="ir.cron" forcecreate="True" id="game_cron_update_battles">
            <field name="name">Game: Cron Actualizar Batallas</field>
            <field name="model_id" ref="your_module.model_game_battle"/>
            <field name="state">code</field>
            <field name="code">model.update_battles()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="activity_user_type">specific</field>
            <field name="doall" eval="False" />
        </record>

        <!-- Cron para actualizar recursos de la ciudad -->
        <record model="ir.cron" forcecreate="True" id="game_cron_update_city_resources">
            <field name="name">Game: Cron Actualizar Recursos del jugador</field>
            <field name="model_id" ref="your_module.model_game_player"/>
            <field name="state">code</field>
            <field name="code">model.update_player_resources()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="activity_user_type">specific</field>
            <field name="doall" eval="False" />
        </record>

        <!-- Cron para actualizar niveles de edificios -->
        <record model="ir.cron" forcecreate="True" id="game_cron_update_buildings">
            <field name="name">Game: Cron Actualizar Niveles de Edificios</field>
            <field name="model_id" ref="your_module.model_game_building"/>
            <field name="state">code</field>
            <field name="code">model.update_level()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="activity_user_type">specific</field>
            <field name="doall" eval="False" />
        </record>
    </data>
</odoo>