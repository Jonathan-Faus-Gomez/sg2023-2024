<odoo>
    <data>


        <record model="ir.ui.view" id="game_player_tree_view">
            <field name="name">game.player.tree</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <tree string="Jugadores">
                    <field name="name"/>
                    <field name="level"/>
                    <field name="dinos"/>
                    <field name="edificios"/>
                    <field name="recursos"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="game_player_form_view">
            <field name="name">game.player.form</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <form string="Jugador">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="level"/>
                            <field name="edificios"/>
                            <field name="dinos"/>
                            <field name="recursos"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="game_player_kanban_view">
            <field name="name">game.player.kanban</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div>
                                <strong><t t-esc="record.name.value"/></strong>
                                <div>
                                    Level: <t t-esc="record.level.value"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
